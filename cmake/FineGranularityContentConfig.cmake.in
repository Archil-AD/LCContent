##############################################################################
# cmake configuration file for FineGranularityContent
#
# requires:
#   MacroCheckPackageLibs.cmake for checking package libraries
#
# returns following variables:
#
#   FineGranularityContent_FOUND      : set to TRUE if FineGranularityContent found
#       if FIND_PACKAGE called with REQUIRED and COMPONENTS arguments
#       FineGranularityContent_FOUND is only set to TRUE if ALL components are also found
#       if REQUIRED is NOT set components may or may not be available
#
#   FineGranularityContent_ROOT       : path to this FineGranularityContent installation
#   FineGranularityContent_VERSION    : package version
#   FineGranularityContent_LIBRARIES  : list of FineGranularityContent libraries (NOT including COMPONENTS)
#   FineGranularityContent_INCLUDE_DIRS  : list of paths to be used with INCLUDE_DIRECTORIES
#   FineGranularityContent_LIBRARY_DIRS  : list of paths to be used with LINK_DIRECTORIES
#   FineGranularityContent_COMPONENT_LIBRARIES      : list of FineGranularityContent component libraries
#   FineGranularityContent_${COMPONENT}_FOUND       : set to TRUE or FALSE for each library
#   FineGranularityContent_${COMPONENT}_LIBRARY     : path to individual libraries
#   FineGranularityContent_${COMPONENT}_LIB_DEPENDS : individual library dependencies
#
# @author Jan Engels, Desy
##############################################################################

SET( FineGranularityContent_ROOT "@CMAKE_INSTALL_PREFIX@" )
SET( FineGranularityContent_VERSION "@FineGranularityContent_VERSION@" )


# ---------- include dirs -----------------------------------------------------
# do not store find results in cache
SET( FineGranularityContent_INCLUDE_DIRS FineGranularityContent_INCLUDE_DIRS-NOTFOUND )
MARK_AS_ADVANCED( FineGranularityContent_INCLUDE_DIRS )

FIND_PATH( FineGranularityContent_INCLUDE_DIRS
	NAMES LCClustering/ClusteringParentAlgorithm.h
	PATHS ${FineGranularityContent_ROOT}/include
	NO_DEFAULT_PATH
)



# ---------- libraries --------------------------------------------------------
INCLUDE( "@ILCSOFT_CMAKE_MODULES_ROOT@/MacroCheckPackageLibs.cmake" )

# only standard libraries should be passed as arguments to CHECK_PACKAGE_LIBS
# additional components are set by cmake in variable PKG_FIND_COMPONENTS
# first argument should be the package name
CHECK_PACKAGE_LIBS( FineGranularityContent FineGranularityContent )




# ---------- libraries dependencies -------------------------------------------
# this sets FineGranularityContent_${COMPONENT}_LIB_DEPENDS variables
INCLUDE( "${FineGranularityContent_ROOT}/lib/cmake/FineGranularityContentLibDeps.cmake" )
 



# ---------- final checking ---------------------------------------------------
INCLUDE( FindPackageHandleStandardArgs )
# set FINEGRANULARITYCONTENTNEW_FOUND to TRUE if all listed variables are TRUE and not empty
# FineGranularityContent_COMPONENT_VARIABLES will be set if FIND_PACKAGE is called with REQUIRED argument
FIND_PACKAGE_HANDLE_STANDARD_ARGS( FineGranularityContent DEFAULT_MSG FineGranularityContent_ROOT FineGranularityContent_INCLUDE_DIRS FineGranularityContent_LIBRARIES ${FineGranularityContent_COMPONENT_VARIABLES} )

SET( FineGranularityContent_FOUND ${FINEGRANULARITYCONTENTNEW_FOUND} )

